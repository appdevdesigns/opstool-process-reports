<!-- Widget -->

<div class='col-xs-2 op-container'>
	<!--Left bar-->
	<div class="op-container op-widget sticky rp-runreport-list">
		<div class="op-widget-masthead">
			<h3><strong app-label-key="rp.runreportlist.header">Report Templates</strong></h3>
			<p app-label-key="rp.runreportlist.description">Choose one of the report template to view</p>
		</div>
		<div class="op-widget-body">
			<ul class="op-list">
				<!-- 
                          data.attr('runReportLists').each(function(item) { 

                            var active = '';
                            if (data.selectedItem && data.selectedItem.getID() == item.getID()) {
                              active = 'active';
                            }

                          -->
				<li mockup-show="new-activity" class="op-container selected [[= active ]]" rp-run-report-id="[[= item.getID() ]]" obj-embed="item">
					<div><i class="fa fa-file-text"></i> <strong>[[= item.attr('title') ]]</strong></div>
				</li>
				<!--
                    });
                    -->
			</ul>
		</div>
	</div>
	<!--/Left bar-->
</div>

<!-- Main stage area -->
<div class='col-xs-10'>
	<div class="rp-runreport-display op-container">
		<div class="rp-runreport-instructionsPanel mockup-display new-activity opsportal-content-area">
			<p app-label-key="rp..runreport.instruction.selectOne"> Select an entry on the left to view the report
			</p>
		</div>
		<div class="rp-runreport-loading mockup-display new-activity opsportal-content-area">
			<p>Loading...</p>
		</div>
		<div class="rp-runreport-preview-panel op-widget">
			<div class="rp-runreport-preview op-widget-body">
			</div>
			<div class="rp-runreport-button pull-right op-container nobgcolor op-margin-top">
				<button app-label-key="rpreport.runreport.buttons.edit" class="rp-runreport-edit btn btn-success offset-15" type="submit"><i class="fa"></i>Edit</button>
			</div>
		</div>

		<div class="rp-runreport-workspace modal fade" role="dialog">
			<div class="modal-dialog modal-lg" style="width: 920px">
				<div class="modal-content" style="width: 920px">
					<div class="modal-body" style="height: 600px; width: 820px">
						<div class="rp-runreport-designer">
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="rp-runreport-save btn btn-success" data-dismiss="modal">Save</button>
						<button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>